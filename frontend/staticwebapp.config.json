{
  "routes": [
    {
      "route": "/api/chat",
      "methods": ["POST", "OPTIONS"],
      "allowedRoles": ["anonymous"],
      "backendUri": "https://portfolio-api-func.azurewebsites.net/api/chat"
    },
    {
      "route": "/api/*",
      "methods": ["GET", "POST", "OPTIONS"],
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/*",
      "serve": "/index.html",
      "statusCode": 200
    }
  ],
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": ["/images/*.{png,jpg,gif}", "/css/*", "/js/*"]
  },
  "responseOverrides": {
    "404": {
      "rewrite": "/index.html",
      "statusCode": 200
    }
  },
  "globalHeaders": {
    "content-security-policy": "default-src 'self' 'unsafe-inline' 'unsafe-eval' https://your-function-app-name.azurewebsites.net; img-src 'self' data: https:; font-src 'self' data: https:; connect-src 'self' https://*.azurewebsites.net; frame-src 'self'",
    "X-Frame-Options": "SAMEORIGIN",
    "X-XSS-Protection": "1; mode=block"
  },
  "mimeTypes": {
    ".json": "application/json"
  },
  "platform": {
    "apiRuntime": "node:16"
  }
}